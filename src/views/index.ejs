    <script>
        function websiteLoaded() {
            // Loading design components and cleaning up
            $(".inner").css({
                paddingBottom: "30px"
            });

            $('#website-check').hide();
            $('#website-up').hide();
            $('#website-down').hide();

            $('#home').fadeIn(300).removeClass('inactive');
            $('#url').val('');
            $('#url').focus();
        };

        function checkInitialized() {
            $('#website-up').hide();
            $('#website-down').hide();

            $(".inner").css({
                paddingBottom: "0px"
            });

            $('#website-check').show();
        };

        $(document).ready(function () {
            websiteLoaded();

            function checkUrl() {
                checkInitialized();

                $.get('/' + encodeURIComponent($("#url").val()), function (res) {
                    $('#website-check').hide();
                    switch (res.message) {
                        case 'Up':
                            $('#website-up').fadeIn(300).show();
                            break;
                        default:
                            $('#website-down').fadeIn(300).show();
                    }
                });
            };

            // Registering form regex method validator
            $.validator.addMethod('validUrl', function (value, element) {
                var url = $.validator.methods.url.bind(this);
                return url(value, element) || url('http://' + value, element);
            }, 'Please enter a valid URL');

            // Registering form validator
            $('#check-url-form').validate({
                rules: {
                    url: {
                        required: true,
                        validUrl: true
                    }
                },
                messages: {
                    url: {
                        required: 'URL is required.',
                        validUrl: 'Invalid URL.'
                    }
                },
                errorElement: 'div',
                submitHandler: function (form) {
                    checkUrl();
                    return false;
                }
            });

            // OnClick handle
            $('#check-btn').click(function (e) {
                e.preventDefault();
                if (!$('#check-url-form').valid()) {
                    return false;
                }
                checkUrl();
            });
        });
    </script>
